from enum import IntEnum


class ClientFlags(IntEnum):
	ALLOW_READ =		1 << 0
	ALLOW_WRITE =		1 << 1
	JOE         =		1 << 2

value = ClientFlags.ALLOW_READ | ClientFlags.JOE

match (value):
	case ClientFlags.ALLOW_READ:
		print('Read is allowed')
	case ClientFlags.ALLOW_WRITE:
		print('Write is allowed')
	case ClientFlags.JOE:
		print('And Joe is here too')
	case _:
		print('Nothing selected')

